<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ConectUsFragment">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/connectus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/charmonman_bold"
        android:text="Contact us"
        android:textColor="@color/pinkB"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_back" />

    <ImageView
        android:id="@+id/con_splash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connectus"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/splashphoto"
        />

        <ImageView
            android:id="@+id/face_ic"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/face"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/con_splash"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://www.facebook.com/newmommy"
            app:layout_constraintStart_toEndOf="@id/face_ic"
            app:layout_constraintTop_toBottomOf="@id/con_splash"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="#233975"
            />
    <ImageView
        android:id="@+id/insta_ic"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/instagram"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/face_ic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.instgram.com/newmommmy"
        app:layout_constraintStart_toEndOf="@id/insta_ic"
        app:layout_constraintTop_toBottomOf="@id/face_ic"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#233975"
        />
    <ImageView
        android:id="@+id/link_ic"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/linkedin"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insta_ic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.linkden.com/newmommy"
        app:layout_constraintStart_toEndOf="@id/link_ic"
        app:layout_constraintTop_toBottomOf="@id/insta_ic"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#233975"
        />
</androidx.constraintlayout.widget.ConstraintLayout>